<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/colorNavTint" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp">
        <shape>
            <solid android:color="@color/colorPrimary" />
            <padding android:left="3dp" android:top="2dp" android:right="8dp"
                android:bottom="2dp" />
            <!-- 应该是圆角 -->
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_calendar"
        android:gravity="left"
        android:width="24dp"
        android:height="22dp">
    </item>
</layer-list>