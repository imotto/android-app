<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_person"
        android:layout_width="32dp"
        android:layout_height="32dp" />
    <TextView
        android:id="@+id/lbl_user"
        android:textColor="@color/ncolorGray"
        android:textSize="@dimen/text_size_16sp"
        android:layout_toEndOf="@id/img_thumb"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lbl_pscore"
        android:text="@string/lbl_zero"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@color/ncolorLightGray"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/img_coins"
        android:layout_toStartOf="@id/lbl_pscore"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_gold"
        android:layout_width="24dp"
        android:layout_height="24dp" />

</RelativeLayout>