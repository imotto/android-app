<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lbl_time"
            android:visibility="gone"
            android:textSize="@dimen/text_size_14sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/ncolorChatTime"
            android:background="@drawable/chat_msg_time_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wrapper_receive_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_thumb"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <TextView
            android:id="@+id/lbl_content"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/ncolorDark"
            android:layout_toEndOf="@id/img_thumb"
            android:background="@drawable/bg_letter"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/wrapper_send_msg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_thumb_me"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <TextView
            android:id="@+id/lbl_content_me"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/ncolorWhite"
            android:background="@drawable/bg_letter_self"
            android:layout_toStartOf="@id/img_thumb_me"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>